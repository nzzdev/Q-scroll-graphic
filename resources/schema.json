{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Grafikabfolge",
  "properties": {
    "title": {
      "title": "Titel",
      "type": "string",
      "Q:options": {
        "placeholder": "Der Titel bringt die Kernaussage der Grafik auf den Punkt&#46;"
      }
    },
    "subtitle": {
      "title": "Untertitel",
      "type": "string",
      "Q:options": {
        "placeholder": "Der Untertitel benennt präzise, was in der Grafik zu sehen ist, inklusive Einheiten&#46;"
      }
    },
    "steps": {
      "title": "Schritte",
      "type": "array",
      "Q:options": {
        "layout": "compact",
        "expandable": {
          "itemLabelProperty": "text"
        }
      },
      "items": {
        "title": "Schritt",
        "type": "object",
        "properties": {
          "text": {
            "title": "Text",
            "type": "string"
          },
          "highlightedTexts": {
            "title": "Hervorhebungen",
            "type": "array",
            "Q:options": {
              "layout": "compact",
              "expandable": {
                "itemLabelProperty": "text"
              }
            },
            "items": {
              "title": "Hervorhebung",
              "type": "object",
              "properties": {
                "text": {
                  "title": "Text",
                  "type": "string"
                },
                "type": {
                  "title": "Typ",
                  "type": "string",
                  "default": "background",
                  "enum": ["background", "underline", "bold"],
                  "Q:options": {
                    "enum_titles": ["Hintergrund", "Unterstrichen", "Fett"]
                  }
                },
                "color": {
                  "title": "Farbe",
                  "type": "number",
                  "default": 0,
                  "Q:options": {
                    "dynamicSchema": {
                      "type": "ToolEndpoint",
                      "config": {
                        "endpoint": "dynamic-schema/highlightedTextColors",
                        "fields": ["highlightedTextColors"]
                      }
                    }
                  }
                },
                "preventLineBreak": {
                  "title": "Zeilenumbruch verhindern",
                  "type": "boolean",
                  "default": false
                }
              }
            }
          },
          "variants": {
            "title": "Varianten",
            "type": "array",
            "Q:options": {
              "layout": "compact",
              "expandable": {
                "itemLabelProperty": "minWidth"
              }
            },
            "items": {
              "title": "Variante",
              "type": "object",
              "properties": {
                "minWidth": {
                  "title": "Mindestbreite in px für diese Variante",
                  "type": "number"
                },
                "asset": {
                  "title": "Grafik",
                  "type": "object",
                  "Q:type": "files",
                  "Q:options": {
                    "maxFiles": 1,
                    "acceptedFiles": "image/*",
                    "fileProperties": {
                      "url": "url",
                      "key": "key",
                      "width": "width",
                      "height": "height",
                      "size": "size",
                      "type": "type"
                    }
                  }
                }
              }
            },
            "default": [
              {
                "asset": {}
              },
              {
                "minWidth": 500,
                "asset": {}
              }
            ]
          }
        }
      }
    },
    "highlightedTextColors": {
      "title": "Hervorhebungsfarben",
      "type": "array",
      "Q:options": {
        "layout": "compact",
        "expandable": {
          "itemLabelProperty": "color"
        }
      },
      "items": {
        "type": "object",
        "properties": {
          "color": {
            "title": "Farbe",
            "type": "string",
            "Q:type": "color"
          }
        }
      }
    },
    "sources": {
      "title": "Quelle(n)",
      "type": "array",
      "Q:options": {
        "layout": "compact",
        "expandable": {
          "itemLabelProperty": "text"
        }
      },
      "items": {
        "type": "object",
        "title": "Quelle",
        "properties": {
          "text": {
            "title": "Quelle",
            "type": "string"
          },
          "link": {
            "Q:type": "link",
            "title": "Link",
            "type": "object",
            "properties": {
              "url": {
                "title": "Link",
                "type": "string",
                "Q:options": {
                  "placeholder": "Direktlink zur Quelle, http://&#46;&#46;&#46;"
                }
              },
              "isValid": {
                "type": "boolean"
              }
            }
          }
        },
        "required": ["text"]
      }
    },
    "notes": {
      "title": "Anmerkungen",
      "type": "string"
    }
  },
  "required": ["title"]
}
